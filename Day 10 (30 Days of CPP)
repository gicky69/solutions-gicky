#include <bits/stdc++.h>

using namespace std;

string ltrim(const string &);
string rtrim(const string &);

int main() {
    string n_temp;
    getline(cin, n_temp);

    int n = stoi(ltrim(rtrim(n_temp)));
    int arr[32], i = 0, ans = 0;

    // Until n becomes 0.
    while (n != 0) {
        arr[i] = n % 2;
        i++;
        n = n / 2;
    }

    // Count consecutive 1's
    int consecutiveOnes = 0;
    for (int j = 0; j < i; j++) {
        if (arr[j] == 1) {
            consecutiveOnes++;
        } else {
            consecutiveOnes = 0; // Reset the count when a zero is encountered
        }
        ans = max(ans, consecutiveOnes); // Update the maximum count
    }

    cout << ans << endl;
    return 0;
}

string ltrim(const string &str) {
    string s(str);
    s.erase(
        s.begin(),
        find_if(s.begin(), s.end(), not1(ptr_fun<int, int>(isspace)))
    );
    return s;
}

string rtrim(const string &str) {
    string s(str);
    s.erase(
        find_if(s.rbegin(), s.rend(), not1(ptr_fun<int, int>(isspace))).base(),
        s.end()
    );
    return s;
}
